<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textConnect"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="@string/app_name"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageConnect"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:padding="11dp"
        app:srcCompat="@drawable/ic_bluetooth_disconnected"
        android:contentDescription="@string/device_status" />

    <ImageView
        android:id="@+id/deviceStatus"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:backgroundTint="#0000"
        android:contentDescription="@string/button_lamp"
        app:srcCompat="@drawable/ic_device_off" />


</LinearLayout>