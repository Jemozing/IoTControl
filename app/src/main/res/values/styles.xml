<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimerSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/lightGreen</item>
        <item name="colorSwitchThumbNormal">@color/lightOrange</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>
</resources>
